<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    android:clickable="true"
    tools:context=".sign_in_screen">

    <ImageView
        android:id="@+id/img_icon_signin"
        android:layout_width="200dp"
        android:layout_height="140dp"
        android:layout_marginTop="110dp"
        android:contentDescription="@string/icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/fr_icon" />

    <EditText
        android:id="@+id/enter_email"
        android:layout_width="310dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:autofillHints=""
        android:background="@drawable/rounded_text_view"
        android:backgroundTint="#FDFBFB"
        android:drawableStart="@drawable/ic_email"
        android:ems="10"
        android:hint=" Email ID"
        android:inputType="textEmailAddress"
        android:paddingStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_icon_signin"
        tools:ignore="HardcodedText,RtlSymmetry" />

    <EditText
        android:id="@+id/enter_pswd"
        android:layout_width="310dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:autofillHints=""
        android:background="@drawable/rounded_text_view"
        android:backgroundTint="#FDFDFD"
        android:ems="10"
        android:hint=" Password"
        android:drawableStart="@drawable/ic_lock"
        android:inputType="textPassword"
        android:paddingStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enter_email"
        tools:ignore="HardcodedText,RtlSymmetry" />

    <Button
        android:id="@+id/btn_signin"
        android:layout_width="310dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:text="Sign In"
        android:textSize="20sp"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enter_pswd"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/txt_forgotpswd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:text="Forgot Password?"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_signin"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/txt_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:clickable="true"
        android:text="Don't have an account? \n         Sign up now"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>